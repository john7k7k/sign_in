model User{
  userID Int @id @default(autoincrement())
  username String @unique
  email String
  passcode String
  level Int
  section String
  fishAble FishAble[]
  registrationTime Int
  exist Int
  verify Int
  verifyCode String?
}

model Fish {
  fishUID String @id
  location String
  exist Int
  pool Pool @relation(fields: [location], references: [id], onDelete: Cascade)
  fishData FishData[]
  fishAble FishAble[]
}

model FishAble{
  id Int @id @default(autoincrement())
  user User @relation(fields: [userID],references: [userID], onDelete: Cascade)
  userID Int
  fish Fish @relation(fields: [fishUID],references: [fishUID], onDelete: Cascade)
  fishUID String
  @@unique([userID,fishUID])
}

model FishData{
  dataID Int @id @default(autoincrement())
  fish Fish @relation(fields: [fishUID],references: [fishUID], onDelete: Cascade)
  fishUID String
  time Int
  bc Float
  err Int
  active Int
  version String
}

model Pool{
  id String @id
  location String
  name String
  mac String
  fish Fish[]
  depart Depart @relation(fields: [location], references: [id], onDelete: Cascade)
}

model Depart{
  id String @id
  location String
  name String
  pool Pool[] 
  instruction Instruction @relation(fields: [location], references: [id], onDelete: Cascade)
}

model Instruction{
  id String @id
  name String
  depart Depart[]
}



