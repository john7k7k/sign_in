// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User{
  userId Int @id @default(autoincrement())
  username String @unique
  email String
  passcode String
  level Int
  section String
  fishAble FishAble[]
}

model Fish {
  fishUID String @id
  fishData FishData[]
  fishAble FishAble[]
}

model FishAble{
  id Int @id @default(autoincrement())
  user User @relation(fields: [username],references: [username])
  username String
  fish Fish @relation(fields: [fishUID],references: [fishUID])
  fishUID String
}

model FishData{
  fish Fish @relation(fields: [fishUID],references: [fishUID])
  fishUID String @id
  time DateTime
  bc Float
  err Int
  active Int
}




